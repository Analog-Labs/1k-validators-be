{
  "exclude": [
    "test",
    "**/__mocks__",
    "node_modules",
    "../../node_modules",
    "src/scripts"
  ],
  "include": ["src/**/*.ts"],
  "files": [
    "src/ApiHandler/ApiHandler.ts",
    "src/chaindata/chaindata.ts",
    "src/constants.ts",
    "src/db/index.ts",
    "src/index.ts",
    "src/logger.ts",
    "src/matrix.ts",
    "src/monitor.ts",
//    "src/nominator.ts",
//    "src/scorekeeper.ts",
//    "src/server.ts",
//    "src/telemetry.ts",
    "src/types.ts",
    "src/utils/util.ts"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES2015", "dom"],
    "outDir": "./build",
    "skipLibCheck": true,
    "rootDir": "src",
    "composite": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
